<h2 class="text-center display-4">Upraviť profil</h2>

<div class="wrapper-center w-50">
  <hr>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :Meno %>
      <%= f.text_field :name, autofocus: true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :Dátum_narodenia %><br/>
      <%= f.date_field :birth_date, autofocus: true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :Akreditácia %>
      <%= f.number_field :credit_number, autofocus: true, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :Email %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :Heslo %> <i>(nechajte prázdne, ak nechcete zmeniť)</i><br/>
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">Minimálne <%= @minimum_password_length %> znakov.</small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :Potvrdenie_hesla %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :Súčasné_heslo %> <i>(potrebujeme vaše súčasné heslo na potvrdenie zmien)</i><br/>
      <%= f.password_field :current_password, autocomplete: "off", :class => 'form-control' %>
    </div>

    <div class="actions">
      <%= link_to "Back", :back, :class => 'btn btn-outline-secondary btn-lg back-button' %>
      <%= f.submit "Upraviť", :class => 'btn btn-red btn-lg' %>
    </div>
  <% end %>
  <hr>
  <h3>Odstránenie môjho účtu</h3>

  <p>
    Nespokojný?
    <%= button_to "Odstrániť môj účet", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete, :class => 'btn btn-outline-danger btn-sm ' %>
  </p>


</div>