<h2 class="text-center display-4">Registrovať sa ako učiteľ</h2>

<div class="wrapper-center w-50">
  <hr>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :Email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :Heslo %>
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">Minimálne <%= @minimum_password_length %> znakov</small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :Potvrdenie_hesla %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>

    <%= f.submit "Registrovať sa", :class => 'btn btn-red btn-lg' %>
    <small class="form-text text-muted">Ste už registrovaný? Prihláste sa!<%= render "devise/shared/links" %></small>
  <% end %>
</div>