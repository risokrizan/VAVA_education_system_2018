
<% if @absence == NIL %>
  <%= form_for(:absence, local: true) do |form| %>

    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :Žiak %>
          <%= form.collection_select(:students_id, Student.all, :id, :name, {:prompt => 'Vyber žiaka'}, {class: 'form-control'}) %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group custom">
          <%= form.label :Dátum, :class => 'display-block' %>
          <%= form.date_select(:when, id: :announcement_date, :class => 'form-control') %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :Dôvod %>
      <%= form.text_field :reason, :class => 'form-control' %>

    </div>

    <div class="actions">
      <%= form.submit "Ulož absenciu", :class => 'btn btn-red' %>
    </div>
  <% end %>

<% else %>
  <%= form_for(@absence, local: true) do |form| %>

    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :Žiak %>
          <%= form.collection_select(:students_id, Student.all, :id, :name, {:prompt => 'Vyber žiaka'}, {class: 'form-control'}) %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :Dátum %>
          <%= form.date_select(:when, id: :announcement_date) %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :Dôvod %>
      <%= form.text_field :reason, :class => 'form-control' %>

    </div>

    <div class="actions">
      <%= form.submit "Ulož absenciu", :class => 'btn btn-red'%>
    </div>
  <% end %>
<% end %>
