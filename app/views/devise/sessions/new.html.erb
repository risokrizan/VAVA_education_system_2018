<h2 class="text-center display-4">Prihlásiť sa</h2>
<div class="wrapper-center w-75">
  <%= form_for(resource, :html => {:class => 'col s12'}, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :Email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :Heslo %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "", :class => 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">

        <div class="custom-control custom-checkbox">
          <%= f.check_box :remember_me, :class => 'custom-control-input' %>
          <%= f.label :Zapamätať_si_ma, :class => 'custom-control-label' %>
        </div>
      </div>
    <% end -%>

    <%= f.submit "Log in", :class => 'btn btn-red btn-lg' %>
    <small class="form-text text-muted">Ešte nie ste registrovaný? Zaregistrujte sa!<%= render "devise/shared/links" %></small>
  <% end %>
</div>
